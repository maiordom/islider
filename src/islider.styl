@import 'nib'

/* =======================
   ------- iSlider -------
   ======================= */

.islider
    position relative
    border-radius 35px

.islider *
    margin 0
    padding 0

.islider__box
    position relative

.islider__path
    position absolute
    border-radius 35px

.islider_has_anim .islider__path
    transition: left .2s ease, width .2s ease

.islider__slider
    position absolute
    z-index 1
    width 26px
    height 26px

.islider_has_anim .islider__slider
    transition: left .2s ease

.islider__slider:before
    content ''
    display block
    background none
    position absolute
    border 1px solid #939393
    width 24px
    height 24px
    background #fafafa
    border-radius 50%

.islider__slider:after
    content ''
    display block
    left 50%
    top 50%
    margin-left -5px
    margin-top -5px
    position absolute
    width 10px
    height 10px
    border-radius 50%

.islider__path-box
    background none !important
    overflow hidden

.islider__path-orig
    border-radius 35px

.islider_range-max .islider__path-orig
    position absolute
    right 0
    width 100%

.islider_range-max .islider__path-orig
    position absolute
    bottom 0
    height 100%

.vertical
    height 180px
    width 20px
    box-shadow inset 0 0 5px 1px rgba(95, 95, 95, 0.3)

.vertical .islider__slider
    left -3px

.vertical .islider__path
    width 100%

.vertical .islider__path-orig
    height 100%
    min-height 40px

/* horizontal layout */

.islider_horizontal
    width 250px
    height 20px
    box-shadow inset 0 2px 5px 1px rgba(95, 95, 95, 0.3)

.islider_horizontal .islider__slider
    top -3px

.islider_horizontal .islider__path
    height 100%

.islider_horizontal .islider__path-orig
    height 100%
    min-width 40px

.islider_horizontal .islider__left 
    margin-left -26px

.islider_horizontal .islider__box
    height 100%

.islider_horizontal.islider_range .islider__box
    margin 0 26px

.islider_horizontal.islider_min .islider__box
    margin-left 26px

.islider_horizontal.islider_max .islider__box
    margin-left 26px

.islider_horizontal.islider_range .islider__path
    margin-left -13px
    padding-left 26px

.islider_horizontal.islider_min .islider__path
    margin-left -26px

.islider_horizontal.islider_max .islider__path
    margin-left -26px
    padding-left 13px

/* end */

/* vertical layout */

.islider_vertical .islider__left 
    margin-top -26px

.islider_vertical.islider_range .islider__box
    top 26px

.islider_vertical.islider_min .islider__box
    top 26px

.islider_vertical.islider_max .islider__box
    top 26px

.islider_vertical.islider_range .islider__path
    margin-top -13px
    padding-top 26px

.islider_vertical.islider_min .islider__path
    margin-top -26px

.islider_vertical.islider_max .islider__path
    margin-top -26px
    padding-top 13px

/* end */

